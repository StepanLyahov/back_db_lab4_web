<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="lyahov" id="12122020-1">
        <createTable tableName="task">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_task"/>
            </column>
            <column name="text" type="varchar(1000)"/>
            <column name="completed" type="boolean"/>
            <column name="list_id" type="bigint">
                <constraints nullable="false" references="list_of_task(id)" foreignKeyName="task_id_list_of_task_fk"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>